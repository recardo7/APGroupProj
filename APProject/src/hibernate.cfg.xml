<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0//EN">
<hibernate-configuration>
	<session-factory>
	
		<!-- JDBC database connection settings -->
		<property name="connection.driver_class">com.msql.jdbc.Driver</property>
		<property name="connection.password">password</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/</property>
		<property name="connection.username">student</property>
		<property name="connection.password">password</property>
		
		<!-- JDBC Connection pool settings -->
		<property name="connection.pool_size">1</property>
		
		<!-- Choose the Hibernate dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		
		<!-- Echo out the SQL to the stdout / console -->
		<property name="show_sql">true</property>
		
		<property name="current_session_context_class">thread</property>
		
	</session-factory>
</hibernate-configuration>

	
